  <title>Category</title>
</head>
<body>
    <%- include('./partials/nav') %>
  <h1>Mains</h1>
  <ul>
    <% menuItems.forEach((item, index) => { %>
    <% if (item.category === 'mains') { %>
    <li><%= item.name %>, <%= item.price %><br>
    Rating: <%= item.rating %>/5<br>
<%= item.details %>}</li>
<% } %>
<% }); %>
</ul>

